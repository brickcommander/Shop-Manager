<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0000" /> <!-- Transparent background -->
            <stroke
                android:width="2dp"
                android:color="#615D5D" /> <!-- Border color and width -->
        </shape>
    </item>
    <item android:top="2dp"> <!-- Shift the content up by the border width -->
        <shape android:shape="rectangle">
            <solid android:color="#0000" /> <!-- Transparent background -->
        </shape>
    </item>
</layer-list>