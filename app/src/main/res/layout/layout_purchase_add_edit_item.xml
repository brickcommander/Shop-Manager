<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemLayoutForAddEddItemFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#E0E0E0"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:weightSum="5">

    <TableLayout
        android:id="@+id/itemDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:stretchColumns="0,1"
        android:padding="9dp"
        app:layout_constraintEnd_toStartOf="@+id/editButton">

        <TableRow>

            <TextView
                android:id="@+id/itemNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Item Name"
                android:textSize="16sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow>
<!--

            <TextView
                android:id="@+id/textViewQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quantity  "
                android:textSize="16sp" />
-->

            <TextView
                android:id="@+id/itemQuantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quantity"
                android:textSize="16sp"
                android:textStyle="bold" />
<!--

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Price  "
                android:textSize="16sp" />
-->

            <TextView
                android:id="@+id/itemPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Price"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!--
            <TextView
                android:id="@+id/oneLinerDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Detail"
                android:textSize="16sp"
                android:textStyle="bold" />
-->
        </TableRow>

    </TableLayout>

    <!-- Purchases Button -->
    <ImageButton
        android:id="@+id/editButton"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1px"
        android:layout_weight="2"
        android:background="@drawable/rounded_button"
        android:contentDescription="Purchases"
        android:scaleType="centerInside"
        android:src="@drawable/baseline_border_color_24"
        app:layout_constraintEnd_toStartOf="@+id/deleteButton"
        app:layout_constraintStart_toEndOf="@+id/itemDetails"
        app:tint="#FFFFFF" />

    <!-- Card Button -->
    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/rounded_button"
        android:contentDescription="Cart"
        android:scaleType="centerInside"
        android:src="@drawable/ic_delete"
        app:layout_constraintStart_toEndOf="@+id/editButton"
        app:tint="#FFFFFF" />

</LinearLayout>